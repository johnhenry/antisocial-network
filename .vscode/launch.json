{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "dev:build",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run build"
    },
    {
      "name": "test:watch",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run test:watch"
    },
    {
      "name": "server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "chrome",
      "type": "chrome",
      "request": "launch",
      "webRoot": "${workspaceFolder}/src",
      "url": "http://localhost:3000"
    },
    {
      "name": "edge",
      "type": "msedge",
      "request": "launch",
      "webRoot": "${workspaceFolder}/src",
      "url": "http://localhost:3000"
    },
    {
      "name": "w/chrome",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "sourceMaps": true,
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "w/edge",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "sourceMaps": true,
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithEdge"
      }
    }
  ]
}
